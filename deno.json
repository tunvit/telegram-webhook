{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "tasks": {
    "test": "deno test --allow-net --allow-env src/app.ts",
    "start": {
      "command": "run --allow-net --allow-env src/app.ts",
      "desc": "Run the application"
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 80
    }
  },
  "lint": {
    "files": {
      "include": [
        "src/**/*.ts"
      ],
      "exclude": [
        "**/*.test.ts"
      ]
    }
  }
}